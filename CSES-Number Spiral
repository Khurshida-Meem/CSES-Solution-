#include <bits/stdc++.h>
using namespace std;
#define fast ios_base::sync_with_stdio(false); cin.tie(0); cout.tie(0);
#define ll long long
#define pb push_back

int main()
{
    //freopen("input.txt","r",stdin);
    fast

    ll int a,b,c,d,n,t,p;
    cin>>t;
    while(t--)
    {
        cin>>a>>b;
        if(a>=b)
        {
            if(a%2==0)
            {
                cout<<(a*a)-(b-1)<<endl;
            }
            else
            {
                a--;
                cout<<(a*a)+b<<endl;
            }
        }
        else
        {
            if(b%2!=0)
            {
                cout<<(b*b)-(a-1)<<endl;
            }
            else{
                    b--;
                cout<<(b*b)+a<<endl;
            }
        }

    }

}
